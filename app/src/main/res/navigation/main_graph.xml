<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        tools:layout="@layout/main_fragment"
        android:name="ru.burtelov.lab6.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/navigateToItem"
            app:destination="@id/nodeListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/nodeListFragment"
        tools:layout="@layout/list_fragment"
        android:name="ru.burtelov.lab6.ui.main.ListFragment"
        android:label="NodeListFragment" >
        <action
            android:id="@+id/navigateToHome"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
</navigation>